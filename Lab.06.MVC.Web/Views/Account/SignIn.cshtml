@model Lab._06.MVC.Web.Models.LoginModel

@using (Html.BeginForm())
{

    @Html.AntiForgeryToken()

    <div class="form-horizontal col-md-11">

        <div align="center">

            <div class="col-md-offset-2 col-md-9">
                <h2>Sign In</h2>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.UserLogin, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.UserLogin, new { htmlAttributes = new { @class = "form-control", @autocomplete = "off" } })
                    <div class="col-md-offset-2 col-md-7">
                        @Html.ValidationMessageFor(model => model.UserLogin, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.UserPasswd, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.UserPasswd, new { htmlAttributes = new { @class = "form-control", @autocomplete = "off" } })
                    <div class="col-md-offset-2 col-md-7">
                        @Html.ValidationMessageFor(model => model.UserPasswd, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-9">
                    <input type="submit" value="Sign in" class="btn btn-primary" />
                    <br>
                    -- Or --
                    <br>
                </div>
                <br>
                <br>
                <div class="col-md-offset-2 col-md-9">
                    <button class="btn btn-primary" onclick="location.href = '@Url.Action("SignUp", "Account")';return false;">Create a new account</button>
                </div>
            </div>
        </div>
    </div>


}