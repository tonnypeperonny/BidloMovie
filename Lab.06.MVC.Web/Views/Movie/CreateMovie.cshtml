@model Lab._06.MVC.Web.Models.AddMovieModel

@{
    ViewBag.Title = "CreateMovie";
}

<h2 align="center">CreateMovie</h2>


@using (Html.BeginForm("CreateMovie","Movie", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
        
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.MovieName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.MovieName, new { htmlAttributes = new { @class = "form-control", @autocomplete = "off" } })
                @Html.ValidationMessageFor(model => model.MovieName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group " >
            @Html.LabelFor(model => model.UserMovieNote, htmlAttributes: new { @class = "control-label col-md-2 " })
            <div class="col-md-10">
                @Html.EditorFor(model => model.UserMovieNote, new { htmlAttributes = new { @class = "form-control", @autocomplete = "off" } })
                @Html.ValidationMessageFor(model => model.UserMovieNote, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
        @Html.Label("Poster", new {@class = "control-label col-md-2"})
        <div class="col-md-10">
            <input type="file" id="Poster" name="upload" />
        </div>
    </div>
                    
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

